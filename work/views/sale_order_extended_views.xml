<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

    <record id="sale_order_work_view_form" model="ir.ui.view">
        <field name="name">sale.order.work.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='sale_reporting']" position="attributes">
                <attribute name="groups"></attribute>
            </xpath>
        </field>
    </record>

    <record id="sale_order_work_view_form2" model="ir.ui.view">
        <field name="name">sale.order.work.form2</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_crm.sale_view_inherit123"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='opportunity_id']" position="attributes">
                <attribute name="groups"></attribute>
            </xpath>
        </field>
    </record>  

    </data>
</odoo>